generator client {
  provider = "prisma-client"
  output   = "../src/types/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
    pesel        Int      @id @unique
    surname      String   

    requests Request[]
}

model Request {
    id           Int      @id @unique @default(autoincrement())
    category     String
    description  String
    userPesel    Int
    name         String

    dateCreated  DateTime @default(now())
    latitude     Float
    longitude    Float

    user         User     @relation(fields: [userPesel], references: [pesel])
}